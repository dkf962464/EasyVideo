<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XTextView">
        <attr name="textContent" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSpacingMult" format="float" />
        <attr name="textSpacingAdd" format="float" />
        <attr name="textXAlignment" format="string" />
    </declare-styleable>
    <declare-styleable name="MaskFaiterView">
        <attr name="text" format="string" />
        <attr name="font_size" format="dimension" />
        <attr name="draw_color" format="color" />
    </declare-styleable>
    <declare-styleable name="EasyVideo">
        <attr name="progressDrawable" format="reference" />
        <attr name="thumb" format="reference" />
        <attr name="fullScreen" format="reference" />
        <attr name="exitFullScreen" format="reference" />
        <attr name="playPauseIcon" format="reference" />
        <attr name="startTimeColor" format="color" />
        <attr name="endTimeColor" format="color" />
        <attr name="bottomBackgroundColor" format="color" />
        <attr name="seekBarHeight" format="dimension" />
        <attr name="isAutoPlay" format="enum" >
            <enum name="play" value="0"/>
            <enum name="display" value="1"/>
        </attr>
        <attr name="isTounch" format="boolean"/>
        <attr name="isShowSeekbarController" format="boolean"/>
        <attr name="playUrl" format="string"/>
    </declare-styleable>
</resources>